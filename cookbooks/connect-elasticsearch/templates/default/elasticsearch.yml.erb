cluster:
  name: logstash

node:
  name: <%= node[:fqdn] %>

network:
  host: <%= node[:ipaddress] %>

path:
  data: /usr/share/elasticsearch/data/<%= node[:hostname] %>
  logs: /var/log/elasticsearch

thread_pool:
  bulk:
    queue_size: 3000

discovery.zen.ping.unicast.hosts: <%= @cluster_nodes %>
